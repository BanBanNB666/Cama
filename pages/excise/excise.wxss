/* pages/bottom_menu/bottom_menu.wxss */
.boxWithCol{
  background-color:white ;
  width: 100%;
  height: 90%;
  bottom: 10%;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin-left: 10%;
  border-radius: 50%;
}

.viewText{
  background-color:#DBDBD7 ;
  width: 50%;
  height: 20%prx;
  margin-left: 40rpx;
  font-size: medium;
}

.boxWithRow{
  background-color: rgb(255, 255, 255);
  width: 100%;
  height: 10%;
  /* position: fixed; */
  display: flex;
  margin-top: 70rpx;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.but{
  width : 76%;
  height : 80rpx;
  margin-top: 120rpx;
  background-color: red;
  border-radius: 30rpx ;
  text-align: center;
  color: rgb(0, 0, 0);
  font-size: 37rpx;
}

.bottomImg{
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  margin-left: 40rpx;
}

.bottomImg2{
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}


.inputs{
  background-color: darkgray;
  width: 60%;
  height: 70rpx;
  margin-left: 5%;
  margin-right:5% ;
  border-radius: 10rpx;
}


